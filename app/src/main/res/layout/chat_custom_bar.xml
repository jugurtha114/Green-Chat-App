<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:alpha="0.7"
    android:background="@color/transparent">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/custom_bar_image"
        android:layout_width="34dp"
        android:layout_height="34dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="3dp"
        android:src="@drawable/default_avatar"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/custom_bar_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="8dp"
        android:fontFamily="@font/black_ops_one"
        android:text="Display Name"
        android:textColor="@color/colorHint"
        android:textSize="16sp"
        app:layout_constraintStart_toEndOf="@+id/custom_bar_image"
        app:layout_constraintTop_toTopOf="@+id/custom_bar_image" />

    <TextView
        android:id="@+id/custom_bar_seen"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/custom_bar_title"
        android:layout_marginEnd="8dp"
        android:fontFamily="@font/audiowide"
        android:text="Last Seen"
        android:textColor="@color/colorHint"
        android:textSize="8sp"
        app:layout_constraintBottom_toBottomOf="@+id/custom_bar_image"
        app:layout_constraintEnd_toEndOf="@+id/custom_bar_title"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/custom_bar_title"
        app:layout_constraintTop_toBottomOf="@+id/custom_bar_title"
        app:layout_constraintVertical_bias="0.0" />

</android.support.constraint.ConstraintLayout>